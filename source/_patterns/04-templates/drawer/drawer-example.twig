  {% include '@organisms/global/header.twig' with {
    header: drawer_example.header
  } %}

  {% include '@templates/news/news-full.twig' %}

  {% set chat %}
    {% include '@molecules/chat/chat.twig' %}
  {% endset %}

  {% include '@organisms/offcanvas/offcanvas.twig' with {
    offcanvas: {
      id: drawer_example.offcanvas.id,
      dialog: {
        button_close: drawer_example.dialog.offcanvas.button_close,
        hero: drawer_example.offcanvas.dialog.hero,
        embed: chat,
      },
