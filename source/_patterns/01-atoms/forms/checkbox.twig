{#
/**
 * Available variables:
 * - checkbox - primary variable
 *   - name: the html "name"
 *   - label: the label next to the checkbox
 *   - id: the id of the checkbox
 *   - attributes: Drupal attributes
 *   - style: array of styles to add to checkbox
 *   - classes: array of classes to add to checkbox
 */
#}

{% set attributes = checkbox.attributes ? checkbox.attributes : create_attribute() %}

{% set classes = [
  'usa-checkbox',
  checkbox.style ? checkbox.style|map(s => 'jcc-checkbox--' ~ s)|join(' '),
]|merge(checkbox.classes|default([''])) %}

<div {{attributes.addClass(classes) }}>
	{% set id = checkbox.id ?? 'checkbox-' ~ random() %}
	<input class="usa-checkbox__input" id="{{ id }}" type="checkbox" name="{{ checkbox.name }}" value="{{ id }}">
	<label class="usa-checkbox__label" for="{{ id }}">{{ checkbox.label }}</label>
</div>
